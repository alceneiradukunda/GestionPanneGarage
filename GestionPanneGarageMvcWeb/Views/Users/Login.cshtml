@model GestionPanneGarageMvcWeb.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Includes/_Default.cshtml";
}
<!DOCTYPE html>
<html>

@RenderPage("~/Views/Inc/_Head.cshtml")
     @ViewBag.mssg;
<body style="background-image:url(images/images.jpg)">
<div class="row" style="border:groove;">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default" >
            <div class="panel-heading" style="text-align:center;color:cyan"><b style="text-align:center;color:cyan">Autentification</b></div>
              @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                      @*<legend></legend>
   <fieldset class="hold-transition login-page">*@
<div class="login-box">
  <div class="login-logo">
    <a ><b style="text-align:center;">&emsp;Gestion des pannes dans un garage</b></a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Entre le nom utilisateur" name="Username" autocomplete="off" required>
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Entre le mot de pass" name="Password" autocomplete="off" required>
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      </div>
      <div class="row">
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="text-muted text-center btn-block btn btn-primary btn-rect" name="btn_login">Se connecter</button>
        </div>
      </div>
      </div>
    </div>
 @* </fieldset>*@
                }
        </div>
    </div>
</div>
</body>
</html>
