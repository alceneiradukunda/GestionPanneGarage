@model IEnumerable<GestionPanneGarageMvcWeb.Models.Reparation>
@{
    ViewBag.Title = "ListesVehiculesTerminer";
    Layout = "~/Views/Layout/_Default1.cshtml";
}

<!Doctype html>
<html lang="en">
  <head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Affichage </title>
</head>
<body>
 <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:rgb(0, 255, 255)">
  <h3 style="background-color: cyan; text-align: center;resize:horizontal;"><i><b><u>Listes des Vehicules Terminent de Reparer</u></b></i></h3>
 <div style="background-color:rgb(255, 216, 0)">
    <b><i class="fa fa-refresh fa-spin"></i>@Html.ActionLink("Mettre a jour cette affichage", "ListesVehiculesTerminer")</b>
</div>
       <p>  
   @using (Html.BeginForm("ListesVehiculesTerminer", "Reparations", FormMethod.Post))
   {
        <span id="startDate"><b>Date Début</b></span><input type="date" name="startDate" />
       <span id="endDate"><b>Date Fin</b></span><input type="date" name="endDate" />
       <input type="submit" name="submit" value="Afficher" />
   }  
</p>
 <div class="table-responsive">
<div class="container mt-15">
  <div class="mt-3">
      <h3 style="background-color: cyan; text-align: center;resize:horizontal;"><i><b><u>Listes des Vehicules Terminent de Reparer</u></b></i></h3>
     <table class="table table-bordered" id="users-list">
       <thead class="table-dark">
          <tr>
            <th>No</th>
              <th>
            @Html.DisplayNameFor(model => model.PanneVehicule.Client.NomClient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PanneVehicule.Client.Prenomclient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PanneVehicule.Client.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PanneVehicule.Client.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Article.NomArticle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PanneVehicule.Plaque)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateReparation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EtatReparation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MontantTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PanneVehicule.EtatVehicule)
        </th>
        </tr>
           </thead>
         <tbody>
             @{
                 int no = 0;
             }
        @foreach (var item in Model)
        {
            no++;
            <tr>
                <td>@no</td>
          <td>
            @Html.DisplayFor(modelItem => item.PanneVehicule.Client.NomClient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PanneVehicule.Client.Prenomclient)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PanneVehicule.Client.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PanneVehicule.Client.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Article.NomArticle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PanneVehicule.Plaque)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateReparation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EtatReparation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MontantTotal)
        </td>
           <td>
            @Html.DisplayFor(modelItem => item.PanneVehicule.EtatVehicule)
        </td>
