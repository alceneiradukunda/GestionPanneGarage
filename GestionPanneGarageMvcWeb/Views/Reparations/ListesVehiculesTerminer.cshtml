           <div class="dropdown">
               <span class="dropdown-toggle dropdown-bg btn btn-outline-primary" role="button" id="dropdownMenuButton5"
                                      data-toggle="dropdown" aria-expanded="false">
                                    Actions
                 </span>
                   <div class="dropdown-menu dropdown-menu-right shadow-none" aria-labelledby="dropdownMenuButton5">
                       @Html.ActionLink("Edit", "Edit1", new { id = item.Id }, new {@class="btn btn-info fa fa-pencil"})
                       @Html.ActionLink("Details", "Details1", new { id=item.Id },new {@class="btn btn-success fa fa-check"}) 
                       @Html.ActionLink("Delete", "Delete1", new { id=item.Id },new {@class="btn btn-danger fa fa-trash"})
                    </div>
             </div>
           </td>*@
            </tr>
        }
       
       </tbody>
     </table>   
      </div>
  </div>
</div>
 </div>
</body>
</html>
@section scripts
{
    <script src="~/Scripts/Datatables.js"></script>
