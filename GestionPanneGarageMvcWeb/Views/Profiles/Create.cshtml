@model GestionPanneGarageMvcWeb.Models.Profile

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Layouts/_Default.cshtml";
}

 
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="background-color:rgb(0, 255, 255)">
<h3 style="background-color: yellow; text-align: center;resize:horizontal;"><i><b><u>Nouveau Profile</u></b></i></h3>
    
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

         <div class="col-md-5">
            <label><b style="font-size:20px;"><i>Profile Name:</i></b></label>
            <input type="text" name="ProfileName" placeholder="Entrer Profile Name:" autocomplete="off" required="required" value="" size="50" class="form-control">
            <label></label>
        </div>
           <br/><br/><br/><br/><br/>
        <div class="col-md-3">
            <label> </label>
            <input type="submit" value="Save"  class="form-control btn btn-primary" />
      </div>
      
    </fieldset>
    <p>@ViewBag.Message</p>
}
<div style="font-size:30px;">
    @Html.ActionLink("Retour à la liste", "Index")
</div>
</div>
